/* component/poster-modal/poster-modal.wxss */
@import '../../assets/styles/flex.wxss';
@import '../../assets/styles/font.wxss';
.poster-modal{
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background: rgba(0,0,0,0.7);
}
.body{
    position: relative;
}
.close{
    color: #ffffff;
    font-size: 32rpx;
    position: absolute;
    right: 0;
    top: 0;
    margin-right: -50rpx;
    margin-top: -70rpx;
    transform: rotate(45deg);
    display: inline-block;
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    border-radius: 50%;
    border: 4rpx solid #ffffff;
}
.poster-iamge{
    width: 544rpx;
    height: 730rpx;
    display: block;
    background: #ffffff;
}
.action{
    margin-top: 30rpx;
}
button{
    width: 100% !important;
    background: #ffda44;
}